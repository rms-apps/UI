# Hoist all Expo and React Native dependencies to the root for proper resolution
public-hoist-pattern[]=expo-*
public-hoist-pattern[]=react-native-*
public-hoist-pattern[]=@react-navigation/*
public-hoist-pattern[]=react-native-screens
public-hoist-pattern[]=react-native-safe-area-context
public-hoist-pattern[]=react-native-gesture-handler
public-hoist-pattern[]=react-native-reanimated
public-hoist-pattern[]=react-native-svg
public-hoist-pattern[]=@rms-apps/*

# Use exact versions for consistency
save-exact=true

# Disable strict peer dependency errors for dev installs
strict-peer-dependencies=false

# If you want peer dependencies to be automatically installed
# auto-install-peers=true

# Use rolling version for workspace protocol to avoid version mismatches
save-workspace-protocol=rolling
# Remove default ^ prefix when adding new dependencies
save-prefix=''